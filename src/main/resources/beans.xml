<?xml version = "1.0" encoding = "UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
  http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

    <bean id="movie1" class="com.stackroute.domain.Movie" scope="prototype" autowire="byName">
    </bean>

    <bean id="actor" class="com.stackroute.domain.Actor">
        <constructor-arg name="name" value="Nan" />
        <constructor-arg name="gender" value="male" />
        <constructor-arg name="age" value="21" />
    </bean>

    <bean id="Actor" class="com.stackroute.domain.Actor">
        <constructor-arg index="0" value="Naneeth" />
        <constructor-arg index="1" value="male" />
        <constructor-arg index="2" value="22" />
    </bean>
    <bean id="actor3" class="com.stackroute.domain.Actor">
        <constructor-arg type="String" value="Nan" />
        <constructor-arg type="String" value="male" />
        <constructor-arg type="int" value="28" />
    </bean>

    <bean id="movie2" class="com.stackroute.domain.Movie" scope="prototype" autowire="byName">
        <constructor-arg name="actor" ref="actor2" />
    </bean>
    <bean id="movie3" class="com.stackroute.domain.Movie">
        <property name="actor" ref="actor3" />
    </bean>
</beans>